{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "target": "es5",
    "listFiles": false,
    "listEmittedFiles": true,
    "noUnusedLocals": true,
    "lib": [
      "es6",
      "dom"
    ],
    "strict": true,
    "outDir": "./lib",
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/__test__/*"
  ]
}
